<Page
    x:Class="InventoryManagementSystem.WPF.Inventories.LocationRegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InventoryManagementSystem.WPF.Inventories"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="LocationRegisterPage"
    d:DataContext="{d:DesignInstance Type=local:LocationRegisterViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Margin="30">
        <Label
            Margin="10"
            d:Content="編集モード"
            Content="{Binding ModeLabel.Value}"
            FontSize="18"
            FontWeight="Bold" />
        <!--  名称入力  -->
        <StackPanel Margin="10" Orientation="Horizontal">
            <Label
                Width="80"
                VerticalAlignment="Center"
                Content="名称" />
            <TextBox
                Width="300"
                Text="{Binding Name.Value, UpdateSourceTrigger=PropertyChanged}"
                Validation.ErrorTemplate="{StaticResource ValidationTemplate}" />
        </StackPanel>

        <!--  説明入力  -->
        <StackPanel Margin="10" Orientation="Horizontal">
            <Label
                Width="80"
                VerticalAlignment="Center"
                Content="説明" />
            <TextBox
                Width="300"
                Text="{Binding Description.Value, UpdateSourceTrigger=PropertyChanged}"
                Validation.ErrorTemplate="{StaticResource ValidationTemplate}" />
        </StackPanel>

        <!--  登録ボタン  -->
        <StackPanel Margin="10" Orientation="Horizontal">
            <Button
                Width="100"
                Margin="10"
                HorizontalAlignment="Right"
                Command="{Binding RegisterCommand}"
                Content="新規登録" />
            <Button
                Width="100"
                Margin="10"
                HorizontalAlignment="Right"
                Command="{Binding EditCommand}"
                Content="更新" />
            <ui:Button
                Width="100"
                Margin="10"
                HorizontalAlignment="Right"
                Command="{Binding CancelCommand}"
                Content="キャンセル" />
        </StackPanel>

        <Separator Margin="10" />
        <!--  保管場所一覧  -->
        <GroupBox
            Margin="0,20,0,0"
            Foreground="White"
            Header="保管場所一覧">
            <DataGrid
                MinHeight="200"
                Margin="20"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding Locations}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding Id}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Name}"
                        Header="名称" />
                    <DataGridTextColumn
                        Width="2*"
                        Binding="{Binding Description}"
                        Header="説明" />
                    <DataGridTemplateColumn Width="Auto" Header="編集">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Command="{Binding DataContext.ChangeEditModeCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="編集" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </StackPanel>
</Page>