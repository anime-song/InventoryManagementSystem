<Page
    x:Class="InventoryManagementSystem.WPF.Inventories.LocationRegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InventoryManagementSystem.WPF.Inventories"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="LocationRegisterPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Margin="30">
        <!--  名称入力  -->
        <StackPanel Margin="10" Orientation="Horizontal">
            <Label
                Width="80"
                VerticalAlignment="Center"
                Content="名称" />
            <TextBox
                Width="300"
                Text="{Binding Name.Value, UpdateSourceTrigger=PropertyChanged}"
                Validation.ErrorTemplate="{StaticResource ValidationTemplate}" />
        </StackPanel>

        <!--  説明入力  -->
        <StackPanel Margin="10" Orientation="Horizontal">
            <Label
                Width="80"
                VerticalAlignment="Center"
                Content="説明" />
            <TextBox
                Width="300"
                Text="{Binding Description.Value, UpdateSourceTrigger=PropertyChanged}"
                Validation.ErrorTemplate="{StaticResource ValidationTemplate}" />
        </StackPanel>

        <!--  登録ボタン  -->
        <Button
            Width="100"
            HorizontalAlignment="Right"
            Command="{Binding RegisterCommand}"
            Content="登録" />

        <Separator Margin="10" />
        <!--  保管場所一覧  -->
        <GroupBox
            Margin="0,20,0,0"
            Foreground="White"
            Header="保管場所一覧">
            <DataGrid
                MinHeight="200"
                Margin="20"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding Locations}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding Id}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Name}"
                        Header="名称" />
                    <DataGridTextColumn
                        Width="2*"
                        Binding="{Binding Description}"
                        Header="説明" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </StackPanel>
</Page>